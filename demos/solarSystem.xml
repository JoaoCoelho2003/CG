<world>
    <window width="800" height="600" />
    <camera>
        <position x="200" y="50" z="650" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>

    <group>
        <!-- Sun -->
        <transform>
            <translate x="0" y="0" z="0" />
            <scale x="3" y="3" z="3" />
        </transform>
        <models>
            <model file="templateSphere.3d" /> <!-- ./generator sphere 10 24 24 templateSphere.3d -->
        </models>

        <!-- Mercury -->
