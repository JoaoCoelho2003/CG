                <rotate time="20" x="0" y="1" z="0" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transform>
            <models>
                <model file="comet.3d" > <!-- ./bin/generator patch teapot.patch 10 comet.3d -->
                    <texture file="moonExample1.jpg" />
                </model>
            </models>
        </group>

        <group>
